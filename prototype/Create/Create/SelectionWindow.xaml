<Window x:Class="Create.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select elements" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Select the items to include:" Margin="0,0,0,10" FontWeight="Bold"/>
        <CheckBox x:Name="chkWalls" Content="Walls" Margin="5"/>
        <CheckBox x:Name="chkDoors" Content="Doors" Margin="5"/>
        <CheckBox x:Name="chkWindows" Content="Windows" Margin="5"/>
        <Button Content="OK" Width="60" Margin="5" HorizontalAlignment="Right" Click="OK_Click"/>
    </StackPanel>
</Window>

