<Window x:Class="Create.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selection Window" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Crop Method Section -->
        <GroupBox Header="Crop Method" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <CheckBox x:Name="chkCropMethod" Margin="5,0"
                  VerticalAlignment="Center"/>
                <Label Content="Automatic Crop" VerticalAlignment="Center"
               Margin="5,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Select Views" Grid.Row="1" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="ViewsListBox" />
            </ScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Width="80" Margin="5" Click="OK_Click">OK</Button>
            <Button Width="80" Margin="5" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>



